@model diploma.Models.Core.TeleStation

@{
    ViewBag.Title = "Добавление АТС";
}

<h2>Добавление АТС</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>АТС</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Почтовый индекс</label>
            <div class="col-md-10">
                <select name="address" class="form-control">
                    @foreach(var address in model)
                </select>

                @Html.EditorFor(model => model.PostOffice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostOffice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку АТС", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

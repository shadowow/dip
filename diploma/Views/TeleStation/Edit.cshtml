@model diploma.Models.Core.TeleStation

@{
    ViewBag.Title = "Редактирование АТС";
}

<h2>Редактирование АТС</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>АТС</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label class="control-label col-md-2">Адрес АТС</label>
            <div class="col-md-10">
                @Html.DropDownList("Addresses", ViewBag.Addresses as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку АТС", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

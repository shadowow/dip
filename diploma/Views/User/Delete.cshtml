@model diploma.Models.Accounts.User

@{
    ViewBag.Title = "Удаление пользователя";
}

<h2>Удаления пользователя</h2>

<h3>Вы уверены, что хотите удалить этого пользователя?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Логин
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            Роль
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("К списку пользователей", "Index")
        </div>
    }
</div>

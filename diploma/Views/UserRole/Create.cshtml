@model diploma.Models.Accounts.UserRole

@{
    ViewBag.Title = "Добавление роли";
}

<h2>Добавление роли</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Роль пользователя</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Имя роли пользователя</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Возможность редактирования справочников</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CanEditReference)
                    @Html.ValidationMessageFor(model => model.CanEditReference, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Возможность редактировать абонентов</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CanEditPersonal)
                    @Html.ValidationMessageFor(model => model.CanEditPersonal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Возможность редактировать пользователей</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CanEditUsers)
                    @Html.ValidationMessageFor(model => model.CanEditUsers, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку ролей", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

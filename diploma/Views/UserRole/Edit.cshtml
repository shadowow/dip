@model diploma.Models.Accounts.UserRole

@{
    ViewBag.Title = "Редактирование роль";
}

<h2>Редактирование роли</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Роль пользователя</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            Имя роли пользователя
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Возможность редактирования справочников
            <div class="col-md-10">
                <div class="checkbox">
                    @if (Model.CanEditReference)
                    { <input id="CanEditReference" name="CanEditReference" value="true" type="checkbox" checked/> }
                    else
                    { <input id="CanEditReference" name="CanEditReference" value="true" type="checkbox" /> }
                    @Html.ValidationMessageFor(model => model.CanEditReference, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            Возможность редактировать абонентов
            <div class="col-md-10">
                <div class="checkbox">
                    @if (Model.CanEditPersonal)
                    { <input id="CanEditPersonal" name="CanEditPersonal" value="true" type="checkbox" checked /> }
                    else
                    { <input id="CanEditPersonal" name="CanEditPersonal" value="true" type="checkbox" /> }
                    @Html.ValidationMessageFor(model => model.CanEditPersonal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            Возможность редактировать пользователей
            <div class="col-md-10">
                <div class="checkbox">
                    @if (Model.CanEditUsers)
                    { <input id="CanEditUsers" name="CanEditUsers" value="true" type="checkbox" checked /> }
                    else
                    { <input id="CanEditUsers" name="CanEditUsers" value="true" type="checkbox" /> }
                    @Html.ValidationMessageFor(model => model.CanEditUsers, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку ролей", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
